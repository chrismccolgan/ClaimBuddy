@model ClaimBuddy.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model.Image))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                <a target="_blank" href="~/images/@Model.Image">
                    <img src="~/images/@Model.Image" style="width:250px; border: 1px solid #ddd; padding: 5px;" asp-append-version="true">
                </a>
            </dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model.ReceiptImage))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReceiptImage)
            </dt>
            <dd class="col-sm-10">
                <a target="_blank" href="~/images/@Model.ReceiptImage">
                    <img src="~/images/@Model.ReceiptImage" style="width: 250px; border: 1px solid #ddd; padding: 5px;" asp-append-version="true">
                </a>
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to Item Index</a>
</div>
